<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Message title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/MessageTitleTV2"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />


    <TextView
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MessageTitleTV2"
        android:layout_alignParentStart="true"
        android:id="@+id/MessageTv2"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="Message send by waiter Kamal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MessageTv2"
        android:layout_alignParentStart="true"
        android:id="@+id/SendByTv1"
        android:textSize="16sp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SendByTv1"
        android:layout_alignParentStart="true"
        android:id="@+id/TimeTv"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:text="accepted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeTv"
        android:layout_alignParentStart="true"
        android:id="@+id/StatusTv1"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>