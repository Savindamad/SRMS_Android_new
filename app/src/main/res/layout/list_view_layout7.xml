<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Message title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/MessageTitleTV2"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="Message send by waiter Kamal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MessageTv2"
        android:layout_alignParentStart="true"
        android:id="@+id/SendByTv1"
        android:textSize="16sp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MessageTitleTV2"
        android:layout_alignParentStart="true"
        android:id="@+id/MessageTv2"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:text="Decline"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/SendByTv1"
        android:layout_alignParentStart="true"
        android:id="@+id/DeclineBtn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_style6"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="Work finished"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/WorkFinishedBtn"
        android:layout_below="@+id/SendByTv1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style1"
        android:textColor="#ffffff"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="Accept"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/AcceptBtn2"
        android:layout_below="@+id/SendByTv1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_style5"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp" />

</RelativeLayout>